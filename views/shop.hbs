<h1 class="mb-4">Shop</h1>

<div class="mb-3">
  <!-- Filter by Category -->
  <form method="GET" action="/shop">
    <label for="categoryFilter" class="form-label">Filter by Category:</label>
    <select id="categoryFilter" name="category" class="form-select">
      <option value="">All Categories</option>
      {{#each categories}}
      <option value="{{id}}" {{#ifEquals ../selectedCategory id}}selected{{/ifEquals}}>{{category}}</option>
      {{/each}}
    </select>
    <button type="submit" class="btn btn-primary mt-2">Apply Filter</button>
  </form>
</div>

{{#if items}}
<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each items}}
  <div class="col">
    <div class="card h-100 d-flex flex-column">
      <img src="{{featureImage}}" class="card-img-top" alt="{{title}}" />
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text"><strong>Price:</strong> ${{price}}</p>
        <p class="card-text"><small class="text-muted">{{postDate}}</small></p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<p class="text-center">No items available in the shop.</p>
{{/if}}
